generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  phone     String?
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  properties     Property[]
  savedSearches  SavedSearch[]

  @@map("users")
}

model Agent {
  id          String   @id @default(cuid())
  userId      String   @unique
  firstName   String
  lastName    String
  email       String   @unique
  phone       String?
  bio         String?
  license     String?
  experience  Int?     // years of experience
  avatar      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  properties Property[]

  @@map("agents")
}

model Property {
  id          String        @id @default(cuid())
  title       String
  description String
  price       Float
  address     String
  location    String        // area/sector
  coordinates String?       // "lat,lng"
  area        Float         // in sqft
  bedrooms    Int
  bathrooms   Int
  propertyType PropertyType
  category    PropertyCategory
  featured    Boolean       @default(false)
  status      PropertyStatus @default(ACTIVE)
  images      PropertyImage[]
  amenities   PropertyAmenity[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  agentId String
  agent   Agent   @relation(fields: [agentId], references: [id], onDelete: Cascade)
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@map("properties")
}

model PropertyImage {
  id         String   @id @default(cuid())
  url        String
  caption    String?
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())

  // Relations
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("property_images")
}

model Amenity {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  icon        String?  // icon name or URL
  category    String?  // e.g., "interior", "exterior", "community"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  properties PropertyAmenity[]

  @@map("amenities")
}

model PropertyAmenity {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())

  // Relations
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  amenityId  String
  amenity    Amenity  @relation(fields: [amenityId], references: [id], onDelete: Cascade)

  @@unique([propertyId, amenityId])
  @@map("property_amenities")
}

model SavedSearch {
  id          String   @id @default(cuid())
  name        String
  filters     Json     // Store search filters as JSON
  notify      Boolean  @default(false) // email notifications for new matches
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("saved_searches")
}

enum UserRole {
  USER
  AGENT
  ADMIN
}

enum PropertyType {
  APARTMENT
  HOUSE
  VILLA
  COMMERCIAL
  OFFICE
  SHOP
  LAND
  STUDIO
}

enum PropertyCategory {
  RENT
  SALE
  SHORT_TERM
}

enum PropertyStatus {
  ACTIVE
  INACTIVE
  SOLD
  RENTED
  PENDING
}